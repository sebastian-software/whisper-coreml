{
  "name": "whisper-coreml",
  "version": "0.1.0",
  "description": "OpenAI Whisper ASR for Node.js with CoreML/ANE acceleration on Apple Silicon",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "whisper-coreml": "./dist/cli.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "build/Release/*.node"
  ],
  "scripts": {
    "build:native": "node-gyp rebuild",
    "build:ts": "tsup",
    "build": "pnpm run build:native && pnpm run build:ts",
    "clean": "node-gyp clean && rm -rf dist coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node test.mjs",
    "benchmark": "node dist/cli.cjs benchmark",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prepare:whisper": "bash scripts/prepare-whisper.sh",
    "check:whisper": "bash scripts/check-whisper-update.sh",
    "prepublishOnly": "pnpm run build",
    "release": "release-it",
    "release:auto": "release-it --ci"
  },
  "keywords": [
    "whisper",
    "openai",
    "asr",
    "speech-recognition",
    "transcription",
    "coreml",
    "apple-silicon",
    "neural-engine",
    "macos",
    "whisper.cpp"
  ],
  "author": "Sebastian Werner",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/whisper-coreml.git"
  },
  "bugs": {
    "url": "https://github.com/sebastian-software/whisper-coreml/issues"
  },
  "homepage": "https://github.com/sebastian-software/whisper-coreml#readme",
  "dependencies": {
    "bindings": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@commitlint/types": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "prettier": "^3.7.4",
    "release-it": "^19.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "os": [
    "darwin"
  ],
  "cpu": [
    "arm64"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "whisperCpp": {
    "version": "v1.8.2"
  }
}
